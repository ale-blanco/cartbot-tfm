{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('build/login.css') }}">
{%  endblock %}

{% block body %}
    <div id="logoCartBot" class="text-center">
        <img src="/img/logo.png" class="img-fluid" alt="logotipo cartbot">
    </div>
    <main class="col-12">
        <div id="divlogin" class="card">
            <div class="card-body">
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Usuario</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"
                               placeholder="Indique usuario" required/>
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" class="form-control" id="password" name="_password"
                               placeholder="Indique contraseña" required/>
                    </div>

                    {% if error %}
                        <div class="text-danger">Usuario o contraseña no valida</div>
                        <br>
                    {% endif %}

                    <button type="submit" class="btn btn-primary">Entrar</button>
                </form>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('build/login.js') }}"></script>
{%  endblock %}